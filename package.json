{
  "name": "static-block-kit",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --watch --watch-ignore='**/gen/**' packages/cli/src/cli.ts dev",
    "build": "bun run packages/cli/src/cli.ts build",
    "gen": "bun run packages/cli/src/cli.ts gen",
    "sprite": "bun run packages/cli/src/cli.ts sprite",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.4",
    "typescript": "^5"
  },
  "dependencies": {
    "@static-block-kit/core": "workspace:*",
    "parse5": "^8.0.0",
    "zod": "^4.1.13"
  }
}
